<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b33a9eff"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose character"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#585858"
        android:layout_above="@+id/turtle"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"/>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:background="@drawable/player1"
        android:layout_centerInParent="true"
        android:id="@+id/turtle"/>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:background="@drawable/player2"
        android:layout_toLeftOf="@+id/turtle"
        android:layout_alignBottom="@+id/turtle"
        android:layout_marginRight="7dp"
        android:id="@+id/koala"/>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:background="@drawable/player3"
        android:layout_toRightOf="@+id/turtle"
        android:layout_alignBottom="@+id/turtle"
        android:layout_marginLeft="7dp"
        android:id="@+id/niancat"/>

</RelativeLayout>